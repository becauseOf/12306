<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/order_bg"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_tv_train_id"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="G312"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clock"/>

        <TextView
            android:id="@+id/order_item_tv_start_date"
            android:layout_marginLeft="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="9-22"
            android:textColor="@color/colorMainTxt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发"
            android:textColor="@color/colorMainTxt"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/dotted_line"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_tv_start_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长沙"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryTxt"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/lianjiexian"/>

        <TextView
            android:id="@+id/order_item_tv_end_station"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="重庆"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryTxt"/>

        <TextView
            android:id="@+id/order_item_tv_price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="¥757.0"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryTxt"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/order_item_tv_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="向松"
            android:textColor="@color/colorMainTxt"/>

        <Button
            android:id="@+id/order_item_btn_cancel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="取消"
            android:visibility="visible"
            android:textColor="@android:color/white"
            android:background="@drawable/order_btn_cancel_bg"/>

        <Button
            android:id="@+id/order_item_btn_pay"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="支付"
            android:textColor="@android:color/white"
            android:background="@drawable/order_btn_pay_bg"/>
        <!--还有的状态为：已退票，可改签-->

    </LinearLayout>


</LinearLayout>


