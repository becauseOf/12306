<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="12dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:id="@+id/calender_item_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDividerTxt"
            android:text="9月"
            />
        <TextView
            android:id="@+id/calender_item_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryTxt"
            android:textSize="28sp"
            android:text="23"
            />
        <TextView
            android:id="@+id/calender_item_tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondTxt"
            android:text="周五"
            />
    </LinearLayout>

    <!--
    android:layout_gravity="center"整体布局相对于父布局居中
        android:gravity="center"布局中的内容居中
    -->

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/order_bg"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calender_item_tv_start_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长沙"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryTxt"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/lianjiexian"/>

            <TextView
                android:id="@+id/calender_item_tv_end_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重庆"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryTxt"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/clock"/>

            <TextView
                android:id="@+id/calender_item_tv_start_hour"
                android:layout_marginLeft="5dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textColor="@color/colorMainTxt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出发"
                android:textColor="@color/colorMainTxt"/>


        </LinearLayout>



    </LinearLayout>


    <ImageView
        android:id="@+id/calender_item_iv_remind"
        android:layout_gravity="center_vertical"
        android:layout_width="32dp"
        android:layout_marginLeft="5dp"
        android:layout_height="32dp"
        android:src="@drawable/remind"/>





</LinearLayout>


