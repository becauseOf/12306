<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/order_bg"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/remain_ticket_item_start_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长沙"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryTxt"/>
            <TextView
                android:id="@+id/remain_ticket_item_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:14"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"/>



        </LinearLayout>

        <!--
                对于textview而言，下面那个属性才起作用
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
        -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remain_ticket_item_trainid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G312"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:textColor="@color/colorSecondTxt"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/lianjiexian_big"/>
            <TextView
                android:id="@+id/remain_ticket_item_span"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08小时23分"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorSecondTxt"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remain_ticket_item_end_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长沙"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryTxt"/>
            <TextView
                android:id="@+id/remain_ticket_item_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:14"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryTxt"/>



        </LinearLayout>

        <TextView
            android:id="@+id/remain_ticket_item_price"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:text="¥424.5起"/>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/dotted_line_gray"
        android:layout_marginLeft="15dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remain_ticket_item_seattype1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二等座:"
            android:textSize="10sp"
            android:textColor="@color/colorSecondTxt"/>



        <TextView
            android:id="@+id/remain_ticket_item_seattype1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11张"
            android:textSize="10sp"
            android:textColor="@color/colorSecondTxt"/>

        <TextView
            android:id="@+id/remain_ticket_item_seattype2"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二等座:"
            android:textSize="10sp"
            android:textColor="@color/colorSecondTxt"/>



        <TextView
            android:id="@+id/remain_ticket_item_seattype2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11张"
            android:textSize="10sp"
            android:textColor="@color/colorSecondTxt"/>
        <TextView
            android:id="@+id/remain_ticket_item_seattype3"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二等座:"
            android:textSize="10sp"
            android:textColor="@color/colorSecondTxt"/>



        <TextView
            android:id="@+id/remain_ticket_item_seattype3_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11张"
            android:textSize="10sp"
            android:textColor="@color/colorSecondTxt"/>

    </LinearLayout>




</LinearLayout>


