<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >


    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/buy_ticket_item_seat_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryTxt"
        android:textSize="16sp"
        android:gravity="right"
        android:layout_marginRight="50dp"
        android:text="硬座"/>


    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/buy_ticket_item_price"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryTxt"
        android:textSize="16sp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/buy_ticket_item_seat_type"
        android:text="¥104.5"/>

    <TextView
        android:id="@+id/ticket_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryTxt"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/buy_ticket_item_price"
        android:text="1120张"/>
    <Button
        android:id="@+id/buy_ticket_item_btn_yuding"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="预定"
        android:background="@drawable/yuding_bg"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>


